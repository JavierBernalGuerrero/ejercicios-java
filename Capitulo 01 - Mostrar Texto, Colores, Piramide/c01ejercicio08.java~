/**
 *Igual que el programa anterior, pero esta vez la pirámide debe aparecer invertida, con el
 *vértice hacia abajo.
 *
 *@author Javier Bernal
 */

public class c01ejercicio08 { // Clase principal
  public static void main(String[] args) {
    System.out.println("* * * * * * * * * ");
    System.out.println(" *             *  ");
    System.out.println("  *           *   ");
    System.out.println("   *         *    ");
    System.out.println("    *       *     ");
    System.out.println("     *     *      ");
    System.out.println("      *   *       ");
    System.out.println("       * *        ");
    System.out.println("        *         ");

  }
}
